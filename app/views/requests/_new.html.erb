<!-- リクエスト申請フォーム -->
<% provide(:title, 'Create comment') %>
<h2>リクエスト申請</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3 request-form">
    <%= form_with(model: [@board, @game_recruitment, Request.new]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :ひとこと %>
      <%= f.text_area :content, class: 'form-control' %>

      <%= f.submit "申請", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
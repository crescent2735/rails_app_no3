<!-- 募集作成フォーム -->
<% provide(:title, 'Create Game_Recruitment') %>
<h2>募集作成</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: [@board, GameRecruitment.new]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :ゲームモード %>
      <%= f.text_field :game_title, class: 'form-control' %>

      <%= f.label :詳細 %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :募集人数 %>
      <%= f.number_field :num_players, class: 'form-control' %>

      <%= f.submit "募集開始", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<!-- 募集作成フォーム -->
<% provide(:title, 'Create Game_Recruitment') %>
<h2>募集作成</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3 game-recruitment-form">
    <%= form_with(model: [@board, GameRecruitment.new]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :ゲームモード %>
        <%= f.select :game_title, options_for_select(['ナワバリバトル', 'バンカラマッチ', 'サーモンラン', 'ナワバトラー']), { include_blank: false }, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :チャンネル名 %>
        <%= f.text_field :channel_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :詳細 %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :募集人数 %>
        <%= f.number_field :num_players, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "募集開始", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>